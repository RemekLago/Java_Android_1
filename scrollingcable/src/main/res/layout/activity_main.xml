<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/mertyKoniec_editText"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="..."
        android:textSize="12sp"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="229dp" />

    <EditText
        android:id="@+id/mertyIlosc_editText"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="..."
        android:textSize="12sp"
        tools:layout_editor_absoluteX="276dp"
        tools:layout_editor_absoluteY="229dp" />

    <TextView
        android:id="@+id/zlecenie_textview"
        android:layout_width="181dp"
        android:layout_height="21dp"
        android:text="Zlecenie"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/przywieszka_textview"
        android:layout_width="180dp"
        android:layout_height="22dp"
        android:text="Przywieszka"
        tools:layout_editor_absoluteX="215dp"
        tools:layout_editor_absoluteY="15dp" />

    <TextView
        android:id="@+id/PrzewijanieNaKonfekcje_textView"
        android:layout_width="183dp"
        android:layout_height="34dp"
        android:gravity="center_vertical"
        android:text="Przewijanie na nową konfekcję:"
        android:textSize="12sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="155dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/numer_konfekcji_input"
        android:layout_width="181dp"
        android:layout_height="34dp"
        android:gravity="center_vertical"
        android:hint="podaj numer nowej konfekcji"
        android:textSize="12sp"
        tools:layout_editor_absoluteX="215dp"
        tools:layout_editor_absoluteY="155dp" />

    <TextView
        android:id="@+id/startMetry_textView"
        android:layout_width="120dp"
        android:layout_height="33dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Metry Start:"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="196dp" />

    <TextView
        android:id="@+id/koniecMetry_textView"
        android:layout_width="120dp"
        android:layout_height="33dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Metry koniec"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="196dp" />

    <TextView
        android:id="@+id/iloscMetry_textView"
        android:layout_width="120dp"
        android:layout_height="33dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Ilość km"
        tools:layout_editor_absoluteX="276dp"
        tools:layout_editor_absoluteY="196dp" />

    <EditText
        android:id="@+id/mertyStart_editText"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="..."
        android:textSize="12sp"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="229dp" />
</androidx.constraintlayout.widget.ConstraintLayout>